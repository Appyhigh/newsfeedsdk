<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_reactions_pop_up"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_medium_x"
        android:paddingTop="@dimen/space_regular_x"
        android:paddingEnd="@dimen/space_medium_x"
        android:paddingBottom="@dimen/space_regular_x">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_reaction_like"
            android:layout_width="@dimen/reaction_option_size"
            android:layout_height="@dimen/reaction_option_size"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/space_large_x"
            app:srcCompat="@drawable/img_reaction_like"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_reaction_love"
            android:layout_width="@dimen/reaction_option_size"
            android:layout_height="@dimen/reaction_option_size"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/space_large_x"
            app:srcCompat="@drawable/img_reaction_love"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_reaction_wow"
            android:layout_width="@dimen/reaction_option_size"
            android:layout_height="@dimen/reaction_option_size"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/space_large_x"
            app:srcCompat="@drawable/img_reaction_wow" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_reaction_sad"
            android:layout_width="@dimen/reaction_option_size"
            android:layout_height="@dimen/reaction_option_size"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/space_large_x"
            app:srcCompat="@drawable/img_reaction_sad" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_reaction_angry"
            android:layout_width="@dimen/reaction_option_size"
            android:layout_height="@dimen/reaction_option_size"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_reaction_angry" />
    </LinearLayout>
</RelativeLayout>