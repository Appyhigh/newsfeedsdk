<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llPrivacy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/homeBackground">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/feedBackground"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:paddingVertical="15dp"
                android:paddingHorizontal="12dp"
                android:text="@string/terms_amp_conditions"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="30dp"
                android:text="By using this App and Clicking “Ok” you agree to our terms of User Generated Content"
                android:layout_gravity="center"
                android:textColor="@color/feedPrimaryTextColor"
                android:textSize="14sp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="30dp"
                android:text="@string/privacy_link_string"
                android:layout_gravity="start"
                android:textColor="@color/purple_500"
                android:textSize="14sp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_blue_10"
                android:text="Ok"
                android:layout_marginVertical="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>