<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="card"
            type="com.appyhigh.newsfeedsdk.model.feeds.Card" />

        <import type="com.appyhigh.newsfeedsdk.R" />
    </data>
    
    <TextView
        android:background="@color/feedBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"

        android:textColor="@color/text_color_black"
        android:textSize="14sp"
        android:textColorLink="@color/purple_500"
        app:description="@{card.items[0].id}"
        tools:text="Bitcoin is a digital currency, a decentralized system that records transactions in a distributed ledger called a blockchain. Bitcoin miners run Whitepaper computer rigs to solve complicated puzzles in an effort to confirm groups Typography"/>
</layout>