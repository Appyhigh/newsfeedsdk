<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.appyhigh.newsfeedsdk.R" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/baseTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:textColor="@color/feedPrimaryTextColor"
                    android:textSize="16sp"
                    tools:text="BTC/USDT"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"

                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:textColor="@color/feedPrimaryTextColor"
                        android:background="@drawable/bg_coin_market_grey"
                        android:textSize="12sp"
                        tools:text="165"
                        android:visibility="gone"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/liquidityScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"

                        android:textColor="#7F8386"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="Liquidity : 0"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/marketName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:textColor="@color/feedPrimaryTextColor"
                    android:textSize="16sp"
                    tools:text="Bitfinex"
                    />
                <TextView
                    android:id="@+id/trustScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:layout_marginTop="5dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textColor="@color/feedPrimaryTextColor"
                    android:background="@drawable/bg_coin_market_red"
                    android:textSize="12sp"
                    tools:text="Low"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:textColor="@color/feedPrimaryTextColor"
                    android:textSize="16sp"
                    tools:text="$65,002"
                    />
                <TextView
                    android:id="@+id/volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"

                    android:textColor="#7F8386"
                    android:textSize="12sp"
                    tools:text="Vol $27.21 Bn"
                    tools:ignore="SmallSp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/feedWhiteLine"/>
    </LinearLayout>
</layout>